<?xml version="1.0" encoding="utf-8"?>
<ServiceManifest Name="NursingHomes.GetewayPkg"
                 Version="1.0.0"
                 xmlns="http://schemas.microsoft.com/2011/01/fabric"
                 xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ServiceTypes>
    <!-- 这是 ServiceType 的名称。
         此名称必须与 Program.cs 的 RegisterServiceType 调用中所使用的字符串相匹配。 -->
    <StatelessServiceType ServiceTypeName="GetewayType" />
  </ServiceTypes>

  <!-- 代码包是指服务可执行文件。 -->
  <CodePackage Name="Code" Version="1.0.0">
    <EntryPoint>
      <ExeHost>
        <Program>NursingHomes.Geteway.exe</Program>
      </ExeHost>
    </EntryPoint>
  </CodePackage>

  <!-- 配置包是指 PackageRoot 下配置目录的内容，它包含
       服务中可独立更新且带有版本的自定义配置设置集。 -->
  <ConfigPackage Name="Config" Version="1.0.0" />

  <Resources>
    <Endpoints>
      <!-- 通信侦听器使用此终结点来获取要侦听的
           端口。请注意，如果你的服务已分区，此端口将与
           代码内放置的不同分区的副本共享。 -->
      <Endpoint Protocol="http" Name="ServiceEndpoint" Type="Input" Port="8158" />
    </Endpoints>
  </Resources>
</ServiceManifest>